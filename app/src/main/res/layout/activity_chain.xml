<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chensiwen.edugame.chain.ChainActivity">

    <View
        android:id="@+id/space1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/space2"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintVertical_weight="2"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:background="@color/common_lime"
        android:layout_height="0dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/space3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space1"
        app:layout_constraintVertical_weight="8"
        >

        <ImageView
            android:id="@+id/image21"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/doudoulong144"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space21"
            app:layout_constraintVertical_weight="10"
            />


        <View
            android:id="@+id/space21"
            android:layout_width="60dp"
            android:background="@color/common_green"
            android:layout_height="60dp"
            android:text="Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image21"
            app:layout_constraintVertical_weight="2"
            />

        <View
            android:id="@+id/space22"
            android:layout_width="60dp"
            android:background="@color/common_green"
            android:layout_height="60dp"
            android:text="Name"
            app:layout_constraintTop_toTopOf="@id/image21"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space21"
            app:layout_constraintVertical_bias="0.5"
            />
        </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:background="@color/common_cyan"
        android:layout_height="60dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/space4"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:layout_constraintVertical_weight="2"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/doudoulong144"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/space4"
        android:layout_width="wrap_content"
        android:background="@color/common_deep_orange"
        android:layout_height="40dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        app:layout_constraintVertical_weight="2"
        />

</android.support.constraint.ConstraintLayout>
