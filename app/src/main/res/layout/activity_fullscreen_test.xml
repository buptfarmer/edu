<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullscreenTestActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/show_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showStatusBar"/>
    <Button
        android:id="@+id/show_cover_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showCoverStatusBar"/>
    <Button
        android:id="@+id/hide_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hideStatusBar"/>
    <Button
        android:id="@+id/hide_cover_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hideCoverStatusBar"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>